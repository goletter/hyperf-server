{
    "name": "goletter/hyperf-server",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "goletter",
            "email": "goletter@outlook.com"
        }
    ],
    "keywords": [
        "php",
        "hyperf",
        "server"
    ],
    "description": "A api server component for hyperf.(based https://github.com/goletter/hyperf-server)",
    "autoload": {
        "psr-4": {
            "Goletter\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "goletter/hyperf-modelfilter": "^1.0",
        "goletter/hyperf-resource": "^1.0",
        "goletter/hyperf-traits": "^1.0",
        "goletter/hyperf-utils": "^1.0",
        "hyperf/server": "^3.1"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 5 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Goletter\\Server\\ConfigProvider"
        }
    }
}
